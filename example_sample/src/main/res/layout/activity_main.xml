<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color_pure_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_color_pure_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_20dp"
            android:gravity="center"
            android:text="更新时间"/>

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_50dp"
            android:text="更新时间"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_20dp"
            android:gravity="center"
            android:text="呼叫状态"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_20dp"
            android:text="@string/app_test_language"/>

        <TextView
            android:id="@+id/testInfo_device_manufacturer_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_20dp"
            android:text="制造商"/>

        <Button
            android:id="@+id/mvi_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Button"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/testPop_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:nextFocusDown="@+id/testPop_btn2"
                android:text="Test Pop"/>

            <Button
                android:id="@+id/testPop_btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="提示音"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_50dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/testSound_sb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:max="100"
                android:progress="60"/>

            <TextView
                android:id="@+id/testSound_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>